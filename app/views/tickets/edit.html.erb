<div class="container-fluid">
  <span class="col-md-5"></span>
<div class="col-md-3 text-center">
  <h2>Edit ticket</h2>
  <%= form_for @t do |f| %>
  <% if @t.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@t.errors.count, "error") %> stopped this ticket from being submitted
      </h2>
      <ul>
        <% @t.errors.messages.values.each do |msg| %>
          <%msg.each do  |m| %>
             <li><%= m %></li>
          <%end %>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, "Enter a subject" %><br>
    <%= f.text_field :title, {:class => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :created_by, "Enter your name" %><br>
    <%= f.text_field :created_by, {:class => 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :created_by_email, "Enter your email" %><br>
    <%= f.email_field :created_by_email, {:class => 'form-control'} %>
  </div>
  <div class="form-group">
    <p><strong>What's the nature of your ticket?</strong></p>
    <%= f.radio_button(:department, "technical", checked: true) %>
    <%= f.label(:department_technical, "Technical") %>
    <%= f.radio_button(:department, "sales") %>
    <%= f.label(:department_sales, "Sales") %>
    <%= f.radio_button(:department, "marketing") %>
    <%= f.label(:department_marketing, "Marketing") %>
  </div>
  <div class="form-group">
  <%= f.label :body, "Enter additional information" %><br>
  <%= f.text_area :body, {:class => 'form-control'} %>
</div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>


</div>
</div>
